<div class="container">
<h2 class="page-title">Editing Book</h2>
<%= form_with model: @book, url: book_path(@book.id) do |f| %>
<div class="row">
  <div class="col-10">
  <label>Title</label><br>
  <%= f.text_field :title %><br>

  <label>Body</label><br>
  <%= f.text_area :body %><br>
  </div>
</div>
<%= f.submit "Update Book" %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>
</div>